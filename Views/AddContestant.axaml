<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TableTennis.Views.AddContestant">
    <Border Classes="top_panel">
        <DockPanel>
            <ComboBox x:Name="RankComboBox" DockPanel.Dock="Left" Margin="5" />
            <Button x:Name="AddButton" DockPanel.Dock="Right" Content="Добавить" Margin="5"
                    IsDefault="True" />
            <TextBox x:Name="NameTextBox" Watermark="ФИО спортсмена" />
        </DockPanel>
    </Border>
</UserControl>